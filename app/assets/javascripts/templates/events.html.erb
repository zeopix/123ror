<section class="row" ng-if="sports">
  <div class="row">
  <h1 class="h3 col-md-6"><a href="#">{{sport.title}}</a></h1>
  </div>
  <div class="row">

    <a class="well col-sm-6" ng-repeat="event in sport.events" href="#/sports/{{sport.id}}/events/{{event.id}}">
          <h2>{{event.title}}</h2>
          <h4>{{event.meeting}}</h4>
          <span class="score">{{event.score}}</span>
    </a>
  </div>
</section>
